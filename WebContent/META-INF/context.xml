<?xml version="1.0" encoding="UTF-8"?>

<Context>

    <Resource name="jdbc/dps"
          auth="Container"
          type="javax.sql.DataSource"
          driverClassName="oracle.jdbc.driver.OracleDriver"
          url="jdbc:oracle:thin:@[DATABASE_NAME]"
          username="[USERNAME]"
          password="[PASSWORD]"
          maxTotal="15"
          maxIdle="3"/>
          
</Context>